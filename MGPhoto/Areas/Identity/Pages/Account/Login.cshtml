@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

 <head>
     <link rel="stylesheet" href="~/css/Login.css" asp-append-version="true" />
 </head>
<!--<div class="row">
    <div class="col-md-4">-->
        <section>
        <div class="imgBx">
            <img src="~/Home/wallpaper6.jpg" alt="">
        </div>
            <div class="contentBx">
                <div class="formBx">
                <form id="account" method="post">
                    <h2>Login</h2>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="inputBx" >
                        <input asp-for="Input.Email" class="email" placeholder="Email" autocomplete="username" aria-required="true" />
                        
                    </div>
                    <div class="inputBx" >
                        <input asp-for="Input.Password" class="password" placeholder="Password" autocomplete="current-password" aria-required="true" />
                    </div>
                    <div>
                        <div class="checkbox">
                             <label asp-for="Input.RememberMe" class="form-label">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                             </label>
                        </div>
                    </div>
                    <div class="inputBx">
                        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                    </div>
                    <div>
                        <p>
                            <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                        </p>
                        <p>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                        </p>
                        <p>
                            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                        </p>
                    </div>
                </form>
                </div>
            </div>
        </section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
