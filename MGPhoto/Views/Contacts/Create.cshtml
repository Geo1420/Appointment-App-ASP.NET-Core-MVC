@model MGPhoto.Models.Contact

@{
    ViewData["Title"] = "Create";
}
<head>
    <link rel="stylesheet" href="~/css/Contact.css" asp-append-version="true" />
</head>

    <!--Contact Form-->
<section id="contact">
  <h1 class="section-header">Contact me</h1>
  <div class="contact-wrapper">
    <!-- Left contact page -->
    <div id="contact-form">
      <h2>Write an message</h2>
      <!--Contact Form Start-->
      <form id="contact" asp-action="Create">
        <input asp-for="EmailUser" type="text" class="text-box" placeholder="Your Name" required />
        <span asp-validation-for="EmailUser" class="text-danger"></span>

        <textarea asp-for="Message" rows="5" placeholder="Your Message" required></textarea>
        <span asp-validation-for="Message" class="text-danger"></span>

        <input asp-action="Create" type="submit" name="submit" class="send-btn" value="Send" />
      </form>
      <!--Contact Form End-->
    </div>
    <!-- Left contact page -->
    <div class="direct-contact-container">
      <ul class="contact-list">
        <li class="list-item">
          <i class="fa fa-map-marker fa-2x"><span class="contact-text place">Craiova Str. A.I. Cuza Nr.25</span></i>
        </li>
        <li class="list-item">
          <i class="fa fa-phone fa-2x"><span class="contact-text phone"><a href="" title="Give me a call">+40 764 987 234</a></span></i>
        </li>
        <li class="list-item">
          <i class="fa fa-envelope fa-2x"><span class="contact-text gmail"><a href="mailto:mgPhotography@gmail.com" title="Send me an email">mgPhotography@gmail.com</a></span></i>
        </li>
      </ul>
      <hr />
      <ul class="social-media-list">
        <li>
          <a href="#" target="_blank" class="contact-icon"><i class="fa fa-facebook" aria-hidden="true"></i></a>
        </li>
        <li>
          <a href="#" target="_blank" class="contact-icon"><i class="fa fa-youtube" aria-hidden="true"></i></a>
        </li>
        <li>
          <a href="#" target="_blank" class="contact-icon"><i class="fa fa-twitter" aria-hidden="true"></i></a>
        </li>
        <li>
          <a href="#" target="_blank" class="contact-icon"><i class="fa fa-instagram" aria-hidden="true"></i></a>
        </li>
      </ul>
      <hr/>
      <div class="copyright">&copy; ALL OF THE RIGHTS RESERVED</div>
    </div>
  </div>
</section>
