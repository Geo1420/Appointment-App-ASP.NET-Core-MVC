@model MGPhoto.Models.Feedback

@{
    ViewData["Title"] = "Create";
}
<head>
    <link rel="stylesheet" href="~/css/Appointment.css" asp-append-version="true" />
</head>
<div id="booking" class="section">
  <div class="section-center">
    <div class="container">
      <div class="row">
        <div class="booking-form">
          <div class="booking-bg"></div>
          <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-header">
              <h2>Add a new feedback</h2>
            </div>
              <div class="col-md-6">
                <div class="form-group">
                  <span class="form-label">Comment</span>
                  <input asp-for="Description" class="form-control" />
                  <span asp-validation-for="Description" class="text-danger"></span>
                </div>
              </div>
            <div class="form-group">
              <span class="form-label">Name</span>
              <input asp-for="Email" class="form-control" />
              <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
               <span class="form-label">Grade(1-10)</span>
               <input asp-for="Grade" class="form-control" />
               <span asp-validation-for="Grade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add feedback" class="btn btn-outline-secondary" />
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
