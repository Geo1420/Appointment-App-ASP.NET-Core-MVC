<div id="booking" class="section">
  <div class="section-center">
    <div class="container">
      <div class="row">
        <div class="booking-form">
          <div class="booking-bg"></div>
          <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-header">
              <h2>Book your photo session</h2>
            </div>
              <div class="col-md-6">
                <div class="form-group">
                  <span class="form-label">Appointment date</span>
                  <input asp-for="Date" class="form-control" />
                  <span asp-validation-for="Date" class="text-danger"></span>
                </div>
              </div>
            <div class="form-group">
              <span class="form-label">Name</span>
              <input asp-for="EmailUser" class="form-control" />
              <span asp-validation-for="EmailUser" class="text-danger"></span>
            </div>
            <div class="form-group">
               <span class="form-label">Message</span>
               <input asp-for="Message" class="form-control" />
               <span asp-validation-for="Message" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Book" class="btn btn-outline-secondary" />
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

